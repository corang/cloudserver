{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "fileMatch": [
    "upstream.yaml"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "matchStrings": [
        "repo: .*\\.com\\/(?<depName>.*).git\\ntag: (?<currentValue>.*)$"
      ],
      "datasourceTemplate": "github-tags"
    }
  ]
}